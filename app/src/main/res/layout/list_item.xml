<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/counter_name"
        android:hint="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/counter_value"
        android:hint="Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/decrement_btn"
        android:onClick="decrementCounterHandler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:text="@string/decrement" />

    <Button
        android:id="@+id/counter_removeCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/decrement_btn"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="Remove Counter"
        android:onClick="removeCounterOnClickHandler" />


<!--    <Button
        android:id="@+id/increment_btn"
        android:onClick="incrementCounterHandler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/decrement_btn"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="@string/increment" />-->

</LinearLayout>